<!DOCTYPE html>
<html>

<head>
	<title>Listas de Aniversário</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%# <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script> %>
	<%= stylesheet_link_tag 'application', media: 'all' %>
	<%= javascript_pack_tag 'application' %>
	<%= javascript_include_tag 'application' %>
</head>

<body>
	<div class="ui container">
		<div class="ui stackable menu">
			<a class="header item" href="/">
				<img src="/logo.png">
				<span style="margin-left: 8px;">Listas de Aniversário</span>
			</a>
			<a class="item" href="/">Home</a>
			<%= link_to 'Produtos', products_path, class: 'item'%>

			<div class="right menu">
				<%= link_to 'Minhas Listas', gift_lists_path, class: 'item'%>
				<%= link_to 'Meus Produtos', user_store_path(User.first.id), class: 'item'%>
				<div class="item">
					<div class="ui secondary disabled button">Ajuda</div>
				</div>

				<div class="item">
					<div class="ui primary disabled button">Sair</div>
				</div>
			</div>
		</div>
	</div>
	<div class="ui container content">
		<% flash.each do | message_type, message_content | %>
		<% flash.delete(:timedout) %> 
		<div class="<%= flash_class(message_type) %> transition">
			<i class="close closable"></i>
			<div class="header">
				<%= message_content %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="ui container content">
		<%= yield %>
	</div>
</body>

</html>